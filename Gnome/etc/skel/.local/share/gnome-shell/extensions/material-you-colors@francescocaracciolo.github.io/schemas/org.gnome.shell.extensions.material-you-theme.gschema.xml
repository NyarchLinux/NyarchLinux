<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.material-you-colors" path="/org/gnome/shell/extensions/material-you-colors/">
        <key name="scheme" type="s">
            <default>"Default"</default>
            <summary>Current color scheme</summary>
        </key>
        <key name="show-notifications" type="b">
            <default>true</default>
            <summary>Show notifications on theme update</summary>
        </key>
        <key name="resize-width" type="i">
            <default>64</default>
            <summary>Width to resize wallpaper to</summary>
        </key>
        <key name="resize-height" type="i">
            <default>64</default>
            <summary>Height to resize wallpaper to</summary>
        </key>
        <key name="enable-pywal-theming" type="b">
            <default>false</default>
            <summary>Enabling Pywal Theming</summary>
        </key>
        <key name="enable-accent-colors" type="b">
            <default>false</default>
            <summary>Enabling Accent colors</summary>
        </key>
        <key name="accent-color" type="s">
            <default>"4282549748"</default>
            <summary>Enabling Accent colors</summary>
        </key>
        <key name="extra-command" type="s">
            <default>"echo test"</default>
            <summary>Command to be run after theme change</summary>
        </key>  
         <key name="arcmenu-theming" type="b">
            <default>false</default>
            <summary>Also theme ArcMenu extension</summary>
        </key>
        <key name="python-backend" type="b">
            <default>false</default>
            <summary>Use the python backend</summary>
        </key>
        <key name="accent-color-lock" type="b">
            <default>false</default>
            <summary>Lock accent colors</summary>
        </key>
    </schema>
</schemalist>
